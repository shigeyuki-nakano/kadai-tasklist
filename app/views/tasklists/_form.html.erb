<%= form_with(model: tasklist, local: true) do |f| %>

<% if tasklist.errors.any? %>
    <div id="error_explanation">
        <ul>
            <% tasklist.errors.full_messages.each do |msg| %>
            <li>
                <%= msg %>
            </li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= f.label :content, 'タスク' %>
<%= f.text_field :content %>
<%= f.submit '投稿' %>
<% end %>