<!--投稿一覧表示-->

<ul class="list-unstyled">
    <% tasks.each do |task| %>
        
        <li class="media mb-3 border border-info">
            <div class="media-body">
                <div>
                    <%= link_to task.user.name, user_path(task.user) %>
                    <span class="text-muted">
                        posted at <%= task.created_at %>
                    </span>
                </div>
                <div>
                    <p>
                        ステータス: <%= task.status %>
                    </p>
                    <p>
                        タスク: <%= task.content %>
                    </p>
                </div>
                <div>
                    <% if current_user == task.user %>
                        <%= link_to "Delete", task, method: :delete, date: { cofirm: "本当によろしいですか？" }, class: 'btn btn-danger btn-sm' %>
                    <% end %>
                </div>
            </div>
        </li>
    <% end %>
    
    <%= paginate tasks %>
</ul>