<% if logged_in? %>

    <div class="row">
        <aside class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <%= current_user.name %>
                    </h3>
                </div>
                <div class="card-body">
                    <%= link_to '新規タスク追加', new_task_path, class: 'btn btn-primary' %>
                </div>
            </div>
        </aside>
        <div class="col-sm-8">
            <!--投稿一覧-->
            <%= render 'tasks/tasks', tasks: @tasks.page(params[:page]) %>
        </div>
    </div>
    
<% else %>

    <div class="center jumbotron">
        <div class="text-center">
            <h1>タスクリストへようこそ！</h1>
            <%= link_to '新規登録はこちら！', signup_path, class: 'btn btn-lg btn-primary' %>
        </div>
    </div>
    
<% end %>
