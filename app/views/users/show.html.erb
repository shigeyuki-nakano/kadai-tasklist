<div class="row">
    <aside class="col-sm-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <%= @user.name %>
                </h3>
            </div>
            <div class="card-body">
                <%= link_to '新規タスク追加', new_task_path, class: 'btn btn-primary' %>
            </div>
        </div>
    </aside>
    <div class="col-sm-8">
        <!--投稿一覧-->
        <%= render 'tasks/tasks', tasks: @user.tasks.page(params[:page]) %>
    </div>
</div>